		<Nullable>enable</Nullable>
		<TargetFramework>net8.0</TargetFramework>
		<AddRazorSupportForMvc>true</AddRazorSupportForMvc>

		<Company>HaFT</Company>
		<Authors>Hadi Fooladi Talari</Authors>

		<AssemblyName>HaFT.Utilities.Razor.EntityFrameworkCore</AssemblyName>
		<RootNamespace>HaFT.Utilities.Razor.EntityFrameworkCore</RootNamespace>

		<RepositoryUrl>https://github.com/Hadi-Fooladi/Utilities</RepositoryUrl>
